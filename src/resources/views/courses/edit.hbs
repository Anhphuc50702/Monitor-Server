<head><script>document.title = "Chỉnh sửa"</script></head>
<div class="mt-4">
    <h3>Chỉnh sửa dữ liệu</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT"> 
        <div class="form-group">
            <label for="name">xe</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>

        <div class="form-group">
                    <label for="name">image</label>
                    <input type="text" class="form-control" value="{{course.image}}" id="image" name="image">
        </div>

        <div class="form-group">
                    <label for="name">số điện thoại</label>
                    <input type="text" class="form-control" value="{{course.sdt}}" id="sdt" name="sdt">
        </div>

        <div class="form-group">
            <label for="khl">Khởi hành lúc</label>
            <input type="text" class="form-control" value="{{course.khl}}" id="khl" name="khl">
        </div>

        <div class="form-group">
            <label for="kht">Khởi hành tại</label>
            <input type="text" class="form-control" value="{{course.kht}}" id="kht" name="kht">
        </div>

        <div class="form-group">
            <label for="klh">Khối lượng hàng</label>
            <input type="text" class="form-control" value="{{course.klh}}" id="klh" name="klh">
        </div>

         <div class="form-group">
            <label for="sl">Số lượng người trên xe</label>
            <input type="text" class="form-control" value="{{course.sl}}" id="sl" name="sl">
        </div>

         <div class="form-group">
            <label for="ten">Tên tài xế</label>
            <input type="text" class="form-control" value="{{course.ten}}" id="ten" name="ten">
        </div>

        <div class="form-group">
            <label for="bs">Biển số</label>
            <input type="text" class="form-control" value="{{course.bs}}" id="bs" name="bs">
        </div>
        
       
        
        <button type="submit" class="btn btn-primary">Cập nhật dữ liệu</button>
    </form>

</div>